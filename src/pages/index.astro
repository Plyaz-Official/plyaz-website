---
import HeroSection from "../components/HeroSection/index.astro";
import QuoteBox from "../components/QuoteBox/index.astro";
import Ticket from "../components/Ticket/index.astro";
import CardGrid from "../components/CardGrid/index.astro";
import Partners from "../components/Partners/index.astro";
import JoinUs from "../components/JoinBox/index.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { texts } from '../config';

const pageTitle = "Home";
---

<MainLayout pageTitle={pageTitle}>
	<HeroSection extended={false} items={texts.home.heroBackground.emptyItems} />
	<QuoteBox description={texts.home.engageQuote} />
	<CardGrid extended={true} items={texts.home.cardContents.revolutionItems} />
	<CardGrid extended={false} items={texts.home.cardContents.missionItems} />
	<JoinUs />
	<Ticket />
	<Partners />
</MainLayout>

