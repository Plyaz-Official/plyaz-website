---
export type Title = {
  firstLine: string;
  secondLine: string;
}

export interface Props {
  title: Title;
  lastUpdated: string;
}

const { title, lastUpdated } = Astro.props;
---
<div class="flex flex-row justify-between">
  <div class="flex flex-col justify-between h-full p-10">
    <h2 class="pb-4">
      <span class="font-secondary font-semibold italic tracking-[-0.14rem] text-6xl capitalize">{title.firstLine}</span>
      <span class="font-semibold text-6xl tracking-[-0.1rem] pr-2 capitalize block">{title.secondLine}</span>
    </h2>
    <p class="text-base">{lastUpdated}</p>
  </div>
  <div class="flex flex-col gap-6 p-10">
    <slot />
  </div>
</div>

