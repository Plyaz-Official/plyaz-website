---
import heroImg from './footballer.png';
import CardGrid from '../CardGrid/index.astro';
import type { Props as Item } from '../CardGrid/card.astro';

interface Props {
  extended: boolean;
  items: Item[];
}

const { extended, items } = Astro.props;
---

<div class="m-auto relative main-header-poster">
  <!-- Start: title -->
  <div data-name="hero-title" class="flex flex-col items-center gap-5 pt-3 mb-2 lg:mb-20">
    <p data-name="sub-header" class="text-lg text-accent-foreground text-center">10,000+ players are released each year. PLYAZ keeps their journeys alive.
    </p> 
    <div class="title">
      <div class="font-primary uppercase font-semibold text-center leading-[0.7]">Keep Football</div>
      <div class="flex flex-row justify-center items-baseline gap-4">
        <div class="font-secondary italic uppercase font-semibold leading-[0.86]">Dreams</div>
        <div class="font-primary uppercase font-semibold leading-[0.7]">Alive</div>
      </div>
    </div>
   </div>
  <!-- End: title -->

  <!-- Start: poster -->
  <div data-name="poster" class="relative lg:absolute lg:left-1/2 z-20 lg:-translate-x-1/2 w-full text-center">
    <img src={heroImg.src} alt="athlete image" class="max-w-none w-[72%] -left-12 -top-6 xl:w-[69%] h-auto relative md:-top-8 md:-left-26 lg:-top-28 lg:-left-24 xl:-top-32 xl:-left-38 inline-block">
  </div>
  <!-- End: poster -->
  
  <!-- Start: grid -->
  <div class="z-10 hidden md:block">
    <CardGrid
      extended={false}
      items={items}
      className='xl:grid hidden'
    />

    <CardGrid
      extended={false}
      items={items.slice(5, 9)}
      className='hidden lg:grid xl:hidden'
    />
  </div>
  <!-- End: grid -->
</div>

