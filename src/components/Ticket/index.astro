---
import CtaButton from "../CtaButton.astro";
import logo from "./logo-ticket.png";
import iconX from "./icon-x.svg";
import iconCut from "./icon-cut.svg";
import qrcode from "./sample-qr.jpg";
---
<div class="w-full h-[400px] bg-fg-primary grid grid-cols-[3fr_1fr] divide-x-3 divide-dashed divide-neutral-200/50 my-20 relative">
  <div class="Ticket-left relative">
    <div class="flex flex-col p-5 pl-10 pr-42 gap-4">
      <h2>
        <span class="font-secondary font-semibold text-6xl italic text-white">Empowering</span>
        <span class="block font-semibold text-6xl text-white">All participants in sports</span>
      </h2>
      <p class="text-lg text-neutral-200 mt-2 mb-19">Join an innovative platform that connects athletes, fans, scouts, agents, and clubs in a unique digital ecosystem. Experience the future of sports networking and unlock new opportunities!</p>

      <CtaButton
        label="JOIN THE COMMUNITY"
        type="secondary"
        className="self-start"
      />
    </div>
    <div class="inline-block absolute bottom-[20px] right-[-13px] ">
      <img class="" src={iconCut.src} alt="icon scissors">
    </div>
  </div>
  <div class="Ticket-right text-center">
    <img class="inline pt-8 h-20" src={logo.src} alt="company logo">
    <div class="flex-col gap-1 text-center py-9">
      <p class="text-xs font-semibold text-white uppercase">NEW ERA OF SPORTS</p>
      <img class="inline w-3 h-3" src={iconX.src} alt="icon x">
      <p class="text-xs font-semibold text-white uppercase">Empowering athletes</p>
    </div>
    <img class="inline h-[10rem]" src={qrcode.src} alt="QR code">
  </div>
</div>
