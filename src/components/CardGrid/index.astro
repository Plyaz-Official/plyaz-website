---
import Card from './card.astro';

type Item = {
  topTitle: string;
  bottomTitle: string;
  description: string;
  ctaLabel?: string;
}

interface Props {
  extended: boolean;
  items: Item[];
}

const { extended, items } = Astro.props;
---

<div class="w-full xl:w-[75rem] md:w-[50rem] m-auto my-20 grid-container grid xl:[grid-template-columns:repeat(3,25rem)] xl:[grid-template-rows:repeat(3,25rem)]">
  {
    items.map((item, index) => (
      <div class={`relative ${index === 0 && extended ? 'col-span-2' : ''}`}>
        <Card
          type={index === 0 ? 'main' : 'child'}
          topTitle={item.topTitle}
          bottomTitle={item.bottomTitle}
          description={item.description}
          extended={extended}
          ctaLabel={index === 0 ? item.ctaLabel : ''}
        />
      </div>
    ))
  }
</div>